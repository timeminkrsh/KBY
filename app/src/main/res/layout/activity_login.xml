<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#49B4BE"
    tools:context=".Activity.LoginActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/payu_dimen_300dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/side_curve"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/payu_dimen_50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mobil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login Here !!!!"
                    android:layout_marginStart="@dimen/payu_dimen_20dp"
                    android:layout_marginTop="@dimen/payu_dimen_80dp"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>

                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/mobil"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/border_box"
                    android:hint="Enter Your Mobile Number/Email Id"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/login"
                    android:layout_width="@dimen/payu_dimen_150dp"
                    android:layout_height="@dimen/payu_dimen_60dp"
                    android:layout_below="@+id/mobile"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/button"
                    android:text="Login"
                    android:textSize="@dimen/payu_dimen_20dp"
                    android:layout_marginTop="@dimen/payu_dimen_30dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>
